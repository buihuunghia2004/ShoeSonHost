<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddShoesActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm hàng"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgShoes"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/box"
            android:padding="10dp"
            android:src="@drawable/pluswhite512" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mã hàng"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edtId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/box"
                android:hint="Mã hàng" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tên hàng"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/box"
                android:hint="Tên hàng" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Thương hiệu"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/box"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:hint="Chọn thương hiệu"
                android:paddingHorizontal="3dp"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Giá vốn"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edtPriceImport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/box"
                android:hint="Giá vốn"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Giá bán"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edtPriceSell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/box"
                android:hint="Giá bán"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical"
                android:padding="1dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Tổng" />

                <TextView
                    android:id="@+id/tvSum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical"
                android:padding="1dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Size" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="35" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="36" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="37" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="38" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="39" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="40" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="41" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="42" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="43" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical"
                android:padding="1dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Số lượng" />

                <EditText
                    android:id="@+id/edtQuantity35"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity36"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity37"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity38"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity39"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity40"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity41"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity42"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edtQuantity43"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColorHint="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>